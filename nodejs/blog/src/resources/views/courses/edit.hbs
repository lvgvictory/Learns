<div class="mt-4">
    <h3>Edit course</h3>

    <form class="row g-3" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div>
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="{{course.name}}">
        </div>

        <div>
            <label for="description">Description</label>
            <input type="text" id="description" name="description" value="{{course.description}}">
        </div>

        <div>
            <label for="videoId">Video ID</label>
            <input type="text" id="videoId" name="videoId" value="{{course.videoId}}">
        </div>

        <div>
            <button type="submit" class="btn btn-primary mb-3">Save</button>
        </div>
    </form>
</div>
